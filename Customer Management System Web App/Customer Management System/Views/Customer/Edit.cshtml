@model Customer

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Edit Customer</h2>
    </div>

    <form method="post" asp-action="Edit">
        <div asp-validation-summary="All"></div>

        <div class="form-row">
             <div class="form-group col-md-6">
                <label asp-for="CustomerId">Customer Id</label>
                <input type="number" class="form-control mb-3" asp-for="CustomerId" readonly > 
                <span asp-validation-for="CustomerId" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="CustomerName">Customer Name</label>
                <input type="text" class="form-control mb-3" asp-for="CustomerName">
                <span asp-validation-for="CustomerName" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="City">City Name</label>
                <input type="text" class="form-control mb-3" asp-for="City">
                <span asp-validation-for="City" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Age">Age</label>
                <input type="text" class="form-control mb-3" asp-for="Age">
                <span asp-validation-for="Age" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Phone">Phone</label>
                <input type="text" class="form-control mb-3" asp-for="Phone">
                <span asp-validation-for="Phone" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6 mb-3">
                <label asp-for="PinCode">PinCode</label>
                <input type="number" class="form-control" asp-for="PinCode">
                <span asp-validation-for="PinCode" class=" alert-danger"></span>
            </div>
        </div>


        <button type="submit" class="btn btn-lg btn-primary p-2"><i class="bi bi-file-plus-fill"></i>Update</button>
        <a asp-controller="Customer" asp-action="Index" class="btn btn-lg btn-warning p-2">Back To List</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}
