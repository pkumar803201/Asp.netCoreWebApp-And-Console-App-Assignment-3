@model List<Customer>
@{
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Searched Customer List</h2>
        </div>
        </div>
<table class="table table-bordered table-striped" style="width:100">
    <thead>
        <tr>
            <th>
                Customer Id
            </th>
            <th>
                Customer Name
            </th>
            <th>
                City
            </th>
            <th>
                Age
            </th>
            <th>
               Phone
            </th>
            <th>
                PinCode
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="20%">
                    @item.CustomerId
                </td>
                <td width="20%">
                    @item.CustomerName
                </td>
                <td width="20%">
                    @item.City
                </td>
                <td width="20%">
                    @item.Age
                </td>
                <td width="20%">
                    @item.Phone
                </td>
                <td width="20%">
                    @item.PinCode
                </td>
                
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Customer" asp-action="Edit" asp-route-id="@item.CustomerId" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit</a>

                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.CustomerId" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Customer" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
</div>
